<% if @gossip.errors.any? %>
<div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à modifier le Gossip pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @gossip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<h1>Modifie ton gossip ici ! </h1>

<%= form_tag url_for(action: 'update'), method: "put" do %>

  <div class="form-group">
  <%= text_field_tag 'title', @gossip.title, class: 'form-control', placeholder: 'Titre'%>
  </div>

  <div class="form-group">
  <%= text_area_tag 'content', @gossip.content, class: 'form-control', placeholder: 'Contenu' %>
  </div>

  <%= submit_tag "Mettre en ligne le Gossip", class: 'btn btn-primary' %>

<% end %>
