<% if flash.now[:danger] == 'Invalid email/password combination' %> 
<div class="alert alert-danger" role="alert"><%= flash.now[:danger] %></div>
<% elsif flash[:danger] == "Il faut se connecter pour effectuer cette action" %>
<div class="alert alert-danger" role="alert"><%= flash[:danger] %></div>
<% end %>



<h1>Connecte toi au Gossip Project ici ! </h1>

<%= form_tag url_for(action: 'create'), method: "post" do %>

  <div class="form-group">
  <%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'Ton email'%>
  </div>

  <div class="form-group">
  <%= text_field_tag 'password', nil, class: 'form-control', placeholder: 'Ton mot de passe' %>
  </div>

  <%= submit_tag "Se connecter", class: 'btn btn-primary' %>

<% end %>