<% if @user.errors.any? %>
<div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à créer l'utilisateur'pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<h1>Inscris toi au Gossip Project ici ! </h1>

<%= form_tag url_for(action: 'create'), method: "post" do %>

  <div class="form-group">
  <%= text_field_tag 'email', @user.email, class: 'form-control', placeholder: 'Ton email'%>
  </div>

  <div class="form-group">
  <%= text_field_tag 'password', @user.password, class: 'form-control', placeholder: 'Ton mot de passe' %>
  </div>

  <div class="form-group">
  <%= text_field_tag 'password_confirmation', @user.password, class: 'form-control', placeholder: 'Confirmation de ton mot de passe' %>
  </div>

  <%= submit_tag "M'inscrire", class: 'btn btn-primary' %>

<% end %>